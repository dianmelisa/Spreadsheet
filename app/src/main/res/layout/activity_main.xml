<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="4"
        android:id="@+id/spread_1_1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="0" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="4"
        android:id="@+id/spread_1_2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="0" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="4"
        android:id="@+id/spread_1_3"
        android:layout_alignBottom="@+id/spread_1_1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="jumlah"
        android:focusable="false"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="4"
        android:id="@+id/spread_2_1"
        android:layout_below="@+id/spread_1_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="0" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="4"
        android:id="@+id/spread_2_2"
        android:layout_alignBottom="@+id/spread_2_1"
        android:layout_centerHorizontal="true"
        android:text="0" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="4"
        android:id="@+id/spread_2_3"
        android:layout_below="@+id/spread_1_2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="jumlah"
        android:focusable="false"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="4"
        android:id="@+id/spread_3_1"
        android:layout_below="@+id/spread_2_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="jumlah"
        android:focusable="false"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="4"
        android:id="@+id/spread_3_2"
        android:layout_below="@+id/spread_2_1"
        android:layout_centerHorizontal="true"
        android:text="jumlah"
        android:focusable="false"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="4"
        android:id="@+id/spread_3_3"
        android:layout_below="@+id/spread_2_3"
        android:layout_alignLeft="@+id/spread_2_3"
        android:layout_alignStart="@+id/spread_2_3"
        android:text="total"
        android:focusable="false"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnHitung"
        android:id="@+id/button"
        android:layout_below="@+id/spread_3_2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="39dp" />
</RelativeLayout>
